#!/usr/bin/env bash
# Retrieves and displays the A record type and destination for subdomains

domain="$1"
subdomain="$2"

lookup_record() {
    local sub="$1"
    dig "${sub}.${domain}" | awk -v s="${sub}" '
        $1 == s "." domain "." && $4 == "A" {
            printf "The subdomain %s is a %s record and points to %s\n", s, $4, $5
        }
    ' domain="${domain}"
}

if [[ -z "$domain" ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

if [[ -z "$subdomain" ]]; then
    for s in www lb-01 web-01 web-02; do
        lookup_record "$s"
    done
else
    lookup_record "$subdomain"
fi
